<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <h1><a href="/">LUNCH ORDER</a></h1>
        <section id="login">
            @Html.Partial("_LoginPartial")
        </section>
        <ul id="navlist">
            <li class="first"><a href="@Url.Content("~")" id="current">Home</a></li>
            <li><a href="@Url.Content("~/Menu/")">Menu</a></li>
            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
            @if (Roles.IsUserInRole("Administrator")) {
                <li><a href="@Url.Content("~/MenuManager/")">Menu Manag</a></li>
                <li><a href="@Url.Content("~/SupplierManager/")">Suppliers Manag</a></li>
                <li><a href="@Url.Content("~/Account/Register")">Users registration</a></li>
            }
        </ul>        
    </div>
    @{Html.RenderAction("CategoryMenu", "Menu");}
    <div id="main">
        @RenderBody()
    </div>
</body>
</html>