@model List<LunchOrder.Models.Food>
@{
    ViewBag.Title = "LUNCH ORDER";
}
<div id="promotion">
</div>
<h3><em>Fresh</em> off the grill</h3>
<ul id="food-list">
    @foreach (var food in Model)
    {
        <li><a href="@Url.Action("Details", "Menu", new { id = food.FoodId })">
            <img alt="@food.Title" src="@food.FoodArtUrl" />
            <span>@food.Title</span>
</a>
        </li>
    }
</ul>